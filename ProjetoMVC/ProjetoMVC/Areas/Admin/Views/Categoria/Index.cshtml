@model IEnumerable<ProjetoMVC.App.Areas.Admin.ViewModels.CategoriaViewModel>

@{
    ViewData["Title"] = "Lista de Categorias";
}

<h1>@ViewData["Title"]</h1>



<p>
    <a class="btn btn-info" asp-action="Create">Nova Categoria</a>
</p>

<table class="table table-hover">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            @*<th>
                    @Html.DisplayNameFor(model => model.Documento)
                </th>*@
            <th>
                @Html.DisplayNameFor(model => model.Slug)
            </th>
          
            @*<th>
                    @Html.DisplayNameFor(model => model.TipoCategoria)
                </th>*@
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                @*<td>
                        @this.FormataDocumento(item.TipoCategoria, item.Documento)
                    </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.Slug)
                </td>
               
                <td class="text-right">
                    <a class="btn btn-info" asp-action="dados-da-categoria" asp-route-id="@item.Id"><spam class="fa fa-search"></spam></a>
                    <a class="btn btn-warning" asp-area="Admin" asp-action="editar-categoria" asp-route-id="@item.Id"><spam class="fa fa-pencil-alt"></spam></a>
                    <a class="btn btn-danger" asp-action="excluir-categoria" asp-route-id="@item.Id"><spam class="fa fa-trash"></spam></a>
                </td>
            </tr>
        }
    </tbody>
</table>

