@model ProjetoMVC.App.Areas.Admin.ViewModels.ModeloBancadaViewModel

@{
    ViewData["Title"] = "Details";
}


<h1>Detalhes do Modelo de Bancada</h1>

<div>   
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Metodo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Metodo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Imagem)
        </dt>
        <dd class="col-sm-10">
            <img src="~/imagens/@Model.Imagem" alt="@Model.Imagem" style="width: 70px; height: 70px" />
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Categoria.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Categoria.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.QuantidadePecas)
        </dt>
        <dd class="col-sm-10">
           @Model.QuantidadePecas
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-primary" asp-action="editar-modelo-de-bancada" asp-route-id="@Model.Id">Editar</a> |
    <a asp-action="Index" class="btn btn-info">Voltar</a>
</div>


