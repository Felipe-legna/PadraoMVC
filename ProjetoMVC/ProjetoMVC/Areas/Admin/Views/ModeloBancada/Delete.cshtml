@model ProjetoMVC.App.Areas.Admin.ViewModels.ModeloBancadaViewModel
@{
    ViewData["Title"] = "Delete";
}

<h1>Deletar Modelo de Bancada</h1>

<h3>Você tem certeza que deseja deletar?</h3>
<div>    
    <hr />
    <dl class="row">

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Metodo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Metodo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Imagem)
        </dt>
        <dd class="col-sm-10">
            <img src="~/imagens/@Model.Imagem" alt="@Model.Imagem" style="width: 70px; height: 70px" />
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Categoria.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Categoria.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.QuantidadePecas)
        </dt>
        <dd class="col-sm-10">
            @Model.QuantidadePecas
        </dd>
    </dl>

    <form asp-action="excluir-modelo-de-bancada">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Deletar" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-info">Voltar</a>
    </form>
</div>