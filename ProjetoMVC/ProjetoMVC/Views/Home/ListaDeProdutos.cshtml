@model X.PagedList.StaticPagedList<ProjetoMVC.Business.Models.Produto>
@{
    ViewData["Title"] = "Lista de Produtos";
    var pesquisa = Context.Request.Query["pesquisa"];
}


<br />
<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center border-bottom">
    <h1 class="h2">@ViewData["Title"]</h1>
    <div class="btn-toolbar mb-2 mb-md-0">

    </div>
</div>

<form method="get">
    <div class="form-group">
        <label for="pesquisa" class="control-label"></label>
        <input id="pesquisa" value="@pesquisa" name="pesquisa" type="text" class="form-control" placeholder="Digite o Telefone ou Nome" />
    </div>
    <button type="submit" value="Pesquisar" class="btn btn-info">Pesquisar</button>
</form>

@foreach (var item in Model)
{

    <div class="card" style="width: 18rem;">
        <img class="card-img-top" src="~/imagens/@item.Imagem" alt="@item.Imagem">
        <div class="card-body">
            <h5 class="card-title">@Html.DisplayFor(modelItem => item.Nome)</h5>
            <p class="card-text"> @Html.DisplayFor(modelItem => item.Valor)</p>
            <a class="btn btn-primary" asp-controller="Orcamento" asp-action="AdicionarItem" asp-route-id="@item.Id">Adicionar</a>
        </div>
    </div>
}

@Html.PagedListPager((IPagedList)Model, pagina => Url.Action("ListaDeProdutos", new { pagina = pagina, pesquisa = pesquisa }))